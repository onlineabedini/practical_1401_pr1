datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum GENDERS {
    MAN
    WOMAN
}

//======================================================================================================
model User{
    //common fields-----------------
    id                 Int               @default(autoincrement()) @id
    appAction          Boolean           @default(true)
    //required fields----------------
    userName           String
    firstName          String?
    lastName           String?
    address            String?       
    email              String?            @unique
    phone              String?            @unique
    password           String
    gender             GENDERS            @default(MAN)
}